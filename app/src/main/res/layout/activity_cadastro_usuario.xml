<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity_cadastro_usuario">

        <TextView
            style="@style/CadastroUsuario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CadastroUsuario_titulo" />

        <EditText
            android:id="@+id/CadastroUsuario_txtNome"
            style="@style/CadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/CadastroUsuario_nome"
            android:inputType="text" />

        <EditText
            android:id="@+id/CadastroUsuario_txtSobrenome"
            style="@style/CadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/CadastroUsuario_sobrenome"
            android:inputType="text" />

        <EditText
            android:id="@+id/CadastroUsuario_txtLogin"
            style="@style/CadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/CadastroUsuario_login"
            android:inputType="text" />

        <EditText
            android:id="@+id/CadastroUsuario_txtSenha"
            style="@style/CadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/CadastroUsuario_senha"
            android:inputType="text" />

        <Button
            android:id="@+id/CadastroUsuario_btnCadastrar"
            style="@style/CadastroUsuario_buttonCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CadastroUsuario_buttonCadastrar" />

    </LinearLayout>

</ScrollView>