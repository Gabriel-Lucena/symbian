<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity_cadastro_usuario">

        <TextView
            style="@style/cadastroUsuario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastroUsuario_titulo" />

        <EditText
            android:id="@+id/txtNomeUsuarioCadastro"
            style="@style/cadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cadastroUsuario_nome"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtSobrenomeUsuarioCadastro"
            style="@style/cadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cadastroUsuario_sobrenome"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtLoginUsuarioCadastro"
            style="@style/cadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cadastroUsuario_login"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtSobrenome"
            style="@style/cadastroUsuario_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cadastroUsuario_senha"
            android:inputType="text" />

    </LinearLayout>

</ScrollView>